<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gervisbermudez.vuenotes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VueNoteApp</name>
    <description>
        A progressive web app for take notes build with VueJs and the LocalStorage Api to store data ðŸ—’
    </description>
    <author email="gervisbermudez@outlook.com" href="gervisbermudez.com">
        Gervis Bermudez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icons/apple-touch-icon-120x120.png" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^8.1.0" />
</widget>
